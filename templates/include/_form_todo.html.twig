<div class="modal" id="{{ 'modal-'~path~'-todo-'~id }}" role="dialog">
  <div class="todo-form">
    <a href="#" class="modal-close fa fa-close" role="button" data-dismiss="dialog"></a>
    <form action="" method="post">
      <label for="todo-title">titre</label>
      <input type="text" name="" id="todo-title" class="todo-form-control" placeholder="Entrez un titre..." value="{{ todo is defined ? todo.title : '' }}">
      <label for="todo-description">description</label>
      <textarea name="" id="todo-description" class="todo-form-control" placeholder="Ecrivez une description de la nouvelle tâche...">{{ todo is defined ? todo.description : '' }}</textarea>
      <div class="status-color-group">
        <div class="status-group">
          <label>statut</label>
          <div class="button-radio-group">
            {% if todo is defined %}
              {% set checked = todo.status.name %}
            {% else %}
              {% set checked = 'À venir' %}
            {% endif %}
            {% for status in statuses %}
              <div class="inline-radio-item">
                <input type="radio" name="status" id="{{ 'status_'~status.id }}" {{ status.name == checked ? 'checked' : '' }}>
                <label for="{{ 'status_'~status.id }}" class="todo-custom-input"><span></span></label>
                <span class="status-color" style="background-color: {{ status.color }};"></span>
                <label>{{ status.name }}</label>
              </div>
            {% endfor %}
          </div>  
        </div>
        <div class="color-group">
          <label>couleur</label>
          <div class="button-color-group">
            {% for color in colors %}
              <input type="radio" name="color" id="{{ 'color_'~color.id }}" {{ color.name == 'white' ? 'checked' :'' }}>
              <label for="{{ 'color_'~color.id }}" class="todo-custom-input" style="background-color: {{ color.codeHex }};">
                <div class="headband" style="background-color: {{ color.codeHex }};">
                  <h1><i class="bi bi-clipboard-data"></i>&nbsp;repositionnable</h1>
                </div>
              </label>
            {% endfor %}
          </div>  
        </div>
      </div>
      <div class="modal-footer">
        <a href="#" class="button button-green btn-close" role="button" data-dismiss="dialog"><i class="fa fa-close"></i>&nbsp;annuler</a>
        <a href="#" class="button button-dark" role="button"><i class="fa fa-save"></i>&nbsp;enregistrer</a>
      </div>
    </form>
  </div>
</div>
